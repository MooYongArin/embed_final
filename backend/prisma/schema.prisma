
generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model SensorEvent {
  id          String           @id @default(uuid())
  type        SensorEventType
  value       Float?           // Angle or distance (accident will keep null)
  status      Boolean?         // Accident = true/false; others = null
  threshold   Float            // The threshold that was crossed
  triggeredAt DateTime         @default(now())

  @@index([type, triggeredAt])
}

enum SensorEventType {
  ACCIDENT
  TILT
  DISTANCE
}

